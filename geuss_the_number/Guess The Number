# ... This area is to Import Modules.
import myModule as myM
# ... This area is to Define Functions.
random = myM.random
my_Pass = myM.my_pass
start = myM.start
exit = myM.exit
# ... This area is to Code.
start()

print('|==> Geuss The Number <==|')

range_of_game = int(input('Enter your range of game : '))



print(f'Your set your range {range_of_game}.\n')

random_number = random.randrange(1,2)



# random_number = random.randrange(1,2)

user_points = 0

for i in range(1,range_of_game + 1):
  print(f'\n--{i}--')
  user_number = int(input('Enter your number : '))
  #
  #
  if (random_number == user_number):
    user_points = user_points + 1
  #
  print(f'{user_number} : {random_number}')






print(f'\n\n{user_points}')
exit()
